<h2>Book</h2>

<%= link_to 'New', routes.new_book_path %>

<div class="book-container">
  <% books.each do |book| %>
    <div class="book">
      <h3><%= book.title %></h3>
      <p><%= book.author %></p>
      <%= link_to 'Edit', routes.edit_book_path(id: book.id) %>
      <%=
        form_for :book, routes.book_path(id: book.id), method: :delete do
          submit '削除'
        end
      %>
    </div>
  <% end %>
</div>
<div class="pager">
<% if page != 0 %>
  <%= link_to '<', routes.books_path(page: page - 1) %>
<% end %>
<% if !pager_last %>
  <%= link_to '>', routes.books_path(page: page + 1) %>
<% end %>
</div>
